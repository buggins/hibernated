{
    "name": "hdtest",
    "description": "test hiberbated.",
    "authors": [ "Vadim Lopatin", "Arjan Knepper" ],
    "targetType": "executable",
    "targetPath": "bin",
    "dependencies": {
        "hibernated": {"version": "~master", "path": "../"}
    },
    "buildRequirements": ["allowWarnings"],
    "configurations": [
        {
            "name": "full",
            "versions": ["USE_MYSQL", "USE_SQLITE", "USE_PGSQL", "USE_PLSQL", "USE_TSQL"],
            "subConfigurations": {
                "hibernated": "full"
            }
        },
        {
            "name": "mysql",
            "versions": ["USE_MYSQL"],
            "subConfigurations": {
                "hibernated": "MySQL"
            }
        },
        {
            "name": "sqlite",
            "versions": ["USE_SQLITE"],
            "subConfigurations": {
                "hibernated": "SQLite"
            }
        },
        {
            "name": "postgres",
            "versions": ["USE_PGSQL"],
            "subConfigurations": {
                "hibernated": "PGSQL"
            }
        },
        {
            "name": "oracle",
            "versions": ["USE_PLSQL"],
            "libs-posix": ["odbc"],
            "libs-windows": ["odbc32"],
            "subConfigurations": {
                "ddbc": "ODBC"
            }
        },
        {
            "name": "mssql",
            "versions": ["USE_TSQL"],
            "libs-posix": ["odbc"],
            "libs-windows": ["odbc32"],
            "subConfigurations": {
                "ddbc": "ODBC"
            }
        }
    ]
}
